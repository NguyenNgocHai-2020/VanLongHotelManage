<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="booking_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-foreach="doc.customer_id" t-as="cus">
                    <t t-call="web.internal_layout">
                        <div class="page" style="font-family:Times New Roman">
                            <h1 style="text-align: center">Văn Lang Hotel</h1>
                            <h2 style="text-align: center">Số 68 - Đường Hùng Vương, Ba Đình, Hà Nội</h2>
                            <h2 style="text-align: center">SĐT:02466699999</h2>
                            <h2 style="text-align: center">Bill Pay</h2>
                            <h3>Booking ID: <t t-esc="doc.booking_id"/></h3>
                            <h3>Customer: <t t-esc="cus.cus_name"/></h3>
                            <h4>Phone: <t t-esc="cus.phone_number"/></h4>
                            <h4>Address: <t t-esc="cus.address"/></h4>
                            <h4>Check in: <t t-esc="doc.check_in"/></h4>
                            <h4>Check out: <t t-esc="doc.check_out"/></h4>
                                <table class="table table-condensed" width="450" height="600" >
                                    <thead> Description:
                                        <tr>
                                            <th>Distribute:</th>
                                            <th>Detail:</th>
                                            <th>Quantity:</th>
                                            <th>Number of days reserved:</th>
                                            <th>Price:</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="doc.room_ids" t-as="ros">
                                            <td>Room: </td>
                                            <td>
                                                <t t-esc="ros.room_code"/>
                                            </td>
                                            <td>
                                                <t t-esc="ros.room_price"/>
                                            </td>
                                            <td>
                                                <t t-esc="doc.number_of_days_reserved"/>
                                            </td>
                                            <td>
                                                <t t-esc="doc.room_total"/>
                                            </td>
                                        </tr>
                                        <tr t-foreach="doc.service_order" t-as="ser">
                                            <td>Service: </td>
                                            <td>
                                                <t t-esc="ser.name"/>
                                            </td>
                                            <td>
                                                <t t-esc="ser.quantity"/>
                                            </td>
                                            <td>
                                                <t t-esc="ser.amount"/>
                                            </td>
                                            <td>
                                                <t t-esc="ser.price"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="3" style="text-align: center"><h3>Sum price:</h3></td>
                                        </tr>
                                        <tr>
                                            <td colspan="2" style="text-align: right">Money Room: </td>
                                            <td>
                                                <t t-esc="doc.room_total"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2" style="text-align: right">Service: </td>
                                            <td>
                                                <t t-esc="doc.sum_service_order"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2" style="text-align: right">Promotion: </td>
                                            <td >
                                                <t t-esc="doc.promotion_price"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2" style="text-align: right">Surcharge: </td>
                                            <td>
                                                <t t-esc="doc.surcharge"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2" style="text-align: right">Total: </td>
                                            <td>
                                                <t t-esc="doc.total_amount"/>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>

                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>