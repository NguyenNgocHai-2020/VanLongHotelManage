<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="picture_tree_view" model="ir.ui.view">
        <field name="name">Picture</field>
        <field name="model">picture</field>
        <field name="arch" type="xml">
            <tree string="Pictures">
                <field name="picture" widget="image"/>
            </tree>
        </field>
    </record>

    <record id="picture_form_view" model="ir.ui.view">
        <field name="name">Picture</field>
        <field name="model">picture</field>
        <field name="arch" type="xml">
            <form string="Pictures">
                <sheet>
                    <group>
                        <field name="picture" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>