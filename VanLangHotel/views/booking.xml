<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="booking_tree_view" model="ir.ui.view">
        <field name="name">Booking View</field>
        <field name="model">booking</field>
        <field name="arch" type="xml">
            <tree>
                <field name="booking_id"/>
                <field name="customer_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="room_ids"/>
                <field name="promotion"/>
                <field name="cost"/>
            </tree>
        </field>
    </record>

    <record id="booking_form_view" model="ir.ui.view">
        <field name="name">Booking Form</field>
        <field name="model">booking</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="check_in_booking"
                            string="Check in"
                            type="object" class="oe_highlight"
                    />
                    <button name="check_out_booking"
                            string="Check out"
                            type="object" class="oe_highlight"
                    />
                    <button name="booking_paid"
                            string="Pay"
                            type="object" class="oe_highlight"
                    />
                    <button name="cancel_booking"
                            string="Cancel"
                            type="object" class="btn-danger"
                    />
                    <field name="state" widget="statusbar" statusbar_visible="booking,check_in,check_out,paid"/>
                </header>
                <sheet>
                    <group>
                        <field name="booking_id"/>
                    </group>
                    <group string="Customer">
                        <field name="customer_id"/>
                        <field name="amount_adult"/>
                        <field name="amount_child"/>
                    </group>
                    <notebook>
                        <page string="Room">
                            <group>
                                <field name="room_ids" widget="many2many"/>
                            </group>
                        </page>
                        <page string="Service">
                            <group>
                                <field name="service" widget="many2many_checkboxes"/>
                            </group>
                        </page>
                    </notebook>
                    <group>
                        <group string="Details">
                            <field name="check_in"/>
                            <field name="check_out"/>
                            <field name="promotion"/>
                            <field name="cost"/>
                        </group>
                        <group string="Other">
                            <field name="note"/>
                            <field name="surcharge"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="booking_action" model="ir.actions.act_window">
        <field name="name">Bookings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">booking</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>